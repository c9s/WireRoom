
.side-panel
  position fixed
  width 500px
  right -500px
  top 38px
  bottom 30px
  padding 0
  border-left 1px solid #ccc
  background #fff
  box-shadow -3px 3px 3px #aaa
  -webkit-transform all
  -moz-transform all
  -webkit-transition right 0.8s
  -moz-transition right 0.8s
  &.show
    right 0px
    -webkit-transition right 0.8s
    -moz-transition right 0.8s
  .handle
    position absolute
    top 80px
    left -38px
    width 38px
    height 50%
    border-radius 10px 0 0 10px
    -webkit-border-radius 10px 0 0 10px
    -moz-border-radius 10px 0 0 10px
    box-shadow -3px 3px 3px #aaa
    -moz-box-shadow -3px 3px 3px #aaa
    background #ccc
  .handle:hover
    background #ddd

.side-panel .notification-panel
  max-height 90%
  overflow auto

.side-panel .notification-panel .message
  padding 3px 5px
  border-bottom 1px solid #ccc
  vertical-align middle
  .icon
    color #666
    width 22px
    margin-right 3px
  .column
    // display inline-block
    float left
    line-height 24px
    margin-right 3px
    vertical-align middle
    display block
    // font-family Consolas, "Liberation Mono", Courier, monospace

.side-panel > .panel-title
  font-weight bold
  text-align center
  background #ddd

.side-panel > .notification-panel .github
  .compare a
    text-decoration none

.side-panel > .notification-panel .github,
.side-panel > .notification-panel .git
  .author
    font-weight bold
  .repo
    font-weight bold
  .branch
    font-weight bold
  .hash
    color #fff
    background #aaa
    font-family Monospace
    color #ccc
    background #555
    font-family Monospace
    border 1px solid #ccc
    border-radius: 5px
    padding 0px 5px
    text-shadow none
    line-height 18px

  // .branch
  // .action
  .time
    font-size 10px

