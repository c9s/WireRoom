@import 'vendor'
@import 'reset'
@import 'grid'
@import 'clearfix'

// application
@import 'wireroom.sidepanel'

// override jquery popover style
.popover
  width 420px
  h1, h2, h3, h4, h5
    margin-bottom 10px
.popover .title
  font-size 12px

a,
a:link,
a:visited
  text-decoration none
  color #4183c4
a:hover
  text-decoration underline

.channel-search
  float: right

.tabs
  .tab-content
    position relative
  ul
    list-style none
    margin 0
    padding 0
    margin-bottom 10px
    margin-top 10px
    border-bottom 1px solid #ccc
    li
      display inline-block
      padding 0
      margin 0
      a
        display: block
        border: 1px solid #ccc
        border-radius: 10px 10px 0 0
        padding: 5px 10px
        margin: 0 3px
        background: #e6e6e6
      a.active
        background: #fff

.detail-content
  .commit
    .meta
      font-weight bold
    .message
      font-family Monospace




.input-panel
  .nickname-column 
    width 20%
    float left
  .message-column 
    width 50%
    float left 
    margin-left 12px
  .submit-button
    float left 
    margin-left 12px


@-webkit-keyframes fadeInEffect
  from { opacity: 0; }
  to   { opacity: 1; }



#nicknameInput
  font-weight bold

#connectionStatus
  position fixed
  bottom 3px
  right 3px
  padding 3px 8px
  color #222
  z-index 999
  text-shadow 1px 1px #fff
  background-color #f0fdcd
  border 1px solid #ccc

.message-container
  margin-top 10px

  p
    padding 3px 8px
    margin 0
    border-bottom 1px dotted #eee
    line-height: 160%
    -webkit-animation-name: fadeInEffect;
    -webkit-animation-duration: 0.8s;

  .action .verb
    display inline-block
    margin 0 2px
  .action .target
    font-weight bold

  .action
    background #ffe

  .nickname
    display inline-block
    font-weight bold
    margin 0 2px

  .avatar
    width: 26px
    vertical-align: top
    img
      width: 26px 
      height: 26px
      vertical-align: top
      margin-right: 0.5em

  .message .column
    margin-right: 0.5em;

  time
    color #ccc
    margin-right 0.5em

