<!doctype html>
<html>
<!-- <html manifest="/manifest.appcache"> -->
    <head>
        <title>WireRoom</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" type="image/x-icon" href="/favicon.ico"/>

        <script src="/js/jquery-1.8.2.min.js"></script>

        <!-- umobi -->
        <link rel="stylesheet" href="/umobi/umobi.min.css" type="text/css" media="screen" />
        <script src="/umobi/umobi.min.js"> </script>

        <!-- wireroom -->
        <link rel="stylesheet" href="/css/wireroom.css" type="text/css" media="screen" />

        <!-- development mode -->
        <script src="/js/coffee-script.js"></script>
        <script src="/js/sha1.js"></script>
        <script src="/js/jquery.md5.js"></script>
        <script src="/js/console.js"></script>
        <script src="/js/jquery.cookie.js"></script>

        <!-- include socket.io.js -->
        <script src="/socket.io/socket.io.js"></script>
        <script type="text/coffeescript" src="/js/wireroom.coffee"></script>
    </head>
    <body>
    <div data-role="page">
        <div data-fixed="true" data-role="header">
            <h1>WireRoom</h1>
        </div>
        <div data-role="content">
            <div class="channel-search"><input type="text" placeholder="search channel here..."/></div>

            <div id="channelTabs" class="tabs">
                <ul class="tab-handle">
                    <li><a href="#hall">Hall</a></li>
                    <li><a href="#channel2">Channel2</a></li>
                </ul>

                <div id="hall" class="tab-content">
                    <div id="inputPanel" class="clearfix">

                        <form method="post" id="messageForm" action="#">
                            <div style="width: 20%; float: left;">
                                <input id="nicknameInput" type="text" name="" value="Someone"/>
                            </div>

                            <div style="width: 50%; float: left; margin-left: 12px;">
                                <input id="messageInput" type="text" name="message_body" value=""/>
                            </div>
                            <div style="float: left; margin-left: 12px;">
                                <button style="margin: 0;" type="submit">Send</button>
                            </div>
                        </form>
                    </div>
                    <div id="messageContainer">

                    </div>
                </div>

                <div id="channel2" class="tab-content">

                </div>

            </div>
        </div>

        <div id="connectionStatus">Waiting for connection.</div>

        <div data-fixed="true" data-role="footer">WireRoom v2 beta</div>
    </div>
    </body>
</html>
